using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Problem3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Please enter a month index: ");
            int monthIndex = int.Parse(Console.ReadLine());

            double[] interestRate = { 3.8, 3.5, 3.5, 3.5, 4.1, 4.1, 4.1, 4.1, 4.9, 4.9, 4.9, 3.8 };

            switch (monthIndex)
            {
                case 1: 
                    Console.WriteLine("January: " + interestRate[monthIndex-1]);
                    break;
                case 2: 
                    Console.WriteLine("February: " + interestRate[monthIndex-1]);
                    break;
                case 3: 
                    Console.WriteLine("March: " + interestRate[monthIndex - 1]);
                    break;
                case 4: 
                    Console.WriteLine("April: " + interestRate[monthIndex - 1]);
                    break;
                case 5: 
                    Console.WriteLine("May: " + interestRate[monthIndex - 1]);
                    break;
                case 6: 
                    Console.WriteLine("June: " + interestRate[monthIndex - 1]);
                    break;
                case 7: 
                    Console.WriteLine("July: " + interestRate[monthIndex - 1]);
                    break;
                case 8: 
                    Console.WriteLine("August: " + interestRate[monthIndex - 1]);
                    break;
                case 9: 
                    Console.WriteLine("September: " + interestRate[monthIndex - 1]);
                    break;
                case 10: 
                    Console.WriteLine("October: " + interestRate[monthIndex - 1]);
                    break;
                case 11: 
                    Console.WriteLine("November: " + interestRate[monthIndex - 1]);
                    break;
                case 12:
                    Console.WriteLine("December: " + interestRate[monthIndex - 1]);
                    break;
                default: 
                    Console.WriteLine("Wrong input");
                    break;
            }
            Console.ReadKey();
        }
    }
}
